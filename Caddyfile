{
    # Global options block at the top
    admin off
}

# Main domain for nostr relay
orangesync.tech {
    reverse_proxy localhost:8080  # This one stays localhost because it's on the host
    tls support@orangesync.tech
}

# Main nsite domain
nsite.orangesync.tech {
    reverse_proxy http://nsite:80
    tls support@orangesync.tech
}

# Wildcard for nsite subdomains
*.nsite.orangesync.tech {
    reverse_proxy http://nsite:3000
    tls support@orangesync.tech
}

# Bostr subdomain
bostr.orangesync.tech {
    reverse_proxy localhost:8083  # This one stays localhost because it's on the host
    tls support@orangesync.tech
}
